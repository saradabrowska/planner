<h1>Task Categories</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_categories.each do |task_category| %>
      <tr>
        <td><span style="display: inline-block; width: 2em; height: 2em; background-color: <%= "#{task_category.color}" %>"></span></td>
        <td><%= task_category.name %></td>
        <td><%= link_to 'Edit', edit_task_category_path(task_category) %></td>
        <td><%= link_to 'Destroy', task_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task Category', new_task_category_path %>
