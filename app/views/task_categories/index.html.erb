
<div class="container bg-faded user-form">
  </br> 
    <div class="row">
        <div class="col">
            <div class="mx-auto">
 
<h1><%= t('activerecord.models.task_categories').capitalize %> 
</h1>
</br>
<%= link_to new_task_category_path do %>
      <% octicon "plus" %>
    <% end %>
  <table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_categories.each do |task_category| %>
      <tr>
        <td class="categories"><span style="display: inline-block; width: 2em; height: 2em; background-color: <%= "#{task_category.color}" %>"></span></td>
        <td class="categories"><%= link_to task_category.name, edit_task_category_path(task_category) %></td>
        <td class="categories"><%= link_to task_category, :method => "delete", data: {confirm: t('are_you_sure') } do %>
                  <%= octicon "x" %>
                <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
      </div>
    </div>
  </div>
</div>
