<div class="container bg-faded user-form">
  </br> 
    <div class="row">
        <div class="col">
            <div class="mx-auto">
                <h2><%= t(".sign_up") %></h2>

            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <% if devise_error_messages!.present? %>
                <div class="alert alert-danger">
                  <%= devise_error_messages! %>
                </div>
              <% end %>

              <div class="form-inputs">
                <%= f.input :email, autofocus: true, autocomplete: "email" %>
           
                <%= f.input :password, hint: t('devise.shared.minimum_password_length', count: @minimum_password_length) %>

                <%= f.input :password_confirmation, autocomplete: "off" %>

                <%= f.input :data_processing_confirmation, label: "Wyrażam zgodę na przechowywanie i przetwarzanie moich danych osobowych na potrzeby działania serwisu Planownik." %>
              </div>

              <div class="form-actions float-right display-block">
                <%= f.button :submit, t("submit") %>
              </div>
            <% end %>
                   </br></br>
                      <div>
              <%= render "devise/shared/links" %>
            </div>
          </div>
    </div>

 </div>
